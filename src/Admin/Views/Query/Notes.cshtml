@using Resources
<div id="edit_query_notes">

	<div>
		<div class="form-group row">
			<div class="col-lg-12">
				<textarea rows="4" class="form-control" data-ng-model="newNote.Content" wrap="off" spellcheck='false' data-ng-disabled="!user.isEditor"></textarea>
				<div class="space-above">
					<button data-ng-click="addNote(newNote)" class="btn btn-sm btn-default pull-right" data-ng-disabled="!user.isEditor">@EditorStrings.Add</button>
				</div>
			</div>
		</div>
	</div>


	<div data-ng-repeat="note in query.Notes track by $index" class="well space-above">
		<div class="form-group row">
			<div class="col-lg-12">

				<div class="form-group row">
					<div class="col-lg-1">Notitie</div>
					<div class="col-lg-3">aangemaakt op {{note.CreationDate | date:'dd-MM-yyyy HH:mm'}}</div>
					<div class="col-lg-3">gewijzigd op {{note.ModificationDate | date:'dd-MM-yyyy HH:mm'}}</div>
					<div class="col-lg-5">&nbsp;</div>
				</div>

				<div class="form-group row">
					<textarea rows="4" class="form-control" data-ng-model="note.Content" wrap="off" spellcheck='false' data-ng-disabled="!user.isEditor"></textarea>
					<div class="space-above">
						<button data-ng-click="deleteNote($index)" class="btn btn-sm btn-danger" data-ng-disabled="!user.isEditor">@EditorStrings.Delete</button>
						<button data-ng-click="updateNote(note)" class="btn btn-sm btn-default pull-right" data-ng-disabled="!user.isEditor">@EditorStrings.Edit</button>
					</div>
				</div>


			</div>
		</div>
	</div>


</div>