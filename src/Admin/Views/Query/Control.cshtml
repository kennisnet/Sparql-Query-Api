@using Resources
<div class="form-group row">
	<div class="col-lg-12">
		<div class="alert alert-success" data-ng-show="false">
			Query is opgeslagen...
		</div>
		@*<button data-ng-click="delete()" class="btn btn-sm btn-danger">@EditorStrings.Delete</button>*@
		<div class="row">
			<div class="col-lg-8 control-group">
				<button data-ng-click="duplicate()" class="btn btn-info">@EditorStrings.Duplicate</button>
				<button data-ng-click="showQueryPreview()" class="btn btn-info">@EditorStrings.PreviewQuery</button>
				<button data-ng-click="showPreview()" class="btn btn-info">@EditorStrings.Preview</button>
			</div>
			<div class="col-lg-4">
				<div class="control-group pull-right">
					<button data-ng-click="cancel()" class="btn btn-danger"
									data-ng-disabled="!user.isEditor"
									data-ng-hide="activeQueryTab == 'notes'">
						@EditorStrings.Cancel
					</button>
					<button data-ng-click="save()"
									data-ng-disabled="!user.isEditor || queryForm.$pristine || (queryForm.$dirty && queryForm.$invalid)"
									data-ng-hide="activeQueryTab == 'notes'"
									class="btn btn-primary">
						@EditorStrings.Save
					</button>
				</div>
			</div>
		</div>
	</div>
</div>
