<div>
	<div>
		<ng-form name="accountForm" >
			<tabset>
				<tab heading="Algemeen">
					@{ Html.RenderPartial("General"); }
				</tab>
				<tab heading="Wachtwoord" data-ng-show="(account.Id == user.id || user.roles.indexOf('administrator') != -1) && account.Id != null">
					@{ Html.RenderPartial("Password"); }
				</tab>
				<tab heading="Toegang">
					@{ Html.RenderPartial("Access"); }
				</tab>
			  <tab heading="Logs" data-ng-controller="LogStatsController">
			    @{ Html.RenderPartial("LogStats"); }
			  </tab>
			</tabset>
			@{ Html.RenderPartial("Control"); }  
		</ng-form>
	</div>
</div>
