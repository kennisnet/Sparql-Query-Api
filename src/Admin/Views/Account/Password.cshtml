@using Resources
@using Trezorix.Sparql.Api.Core.Configuration
<div id="edit_account_general" class="well space-above">
  <ng-form password-form>
    <div class="form-group row">
      <div class="col-lg-12">
        <label>Wachtwoord</label>
        <input type="password" class="form-control" data-ng-model="password1" />
      </div>
    </div>
    <div class="form-group row">
      <div class="col-lg-12">
        <label>Herhaal wachtwoord</label>
        <input type="password" class="form-control" data-ng-model="password2" />
        <button class="btn btn-primary space-above" data-ng-click="savePassword(password1)" data-ng-disabled="!isValidPassword(password1, password2)">@EditorStrings.ChangePassword</button>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-lg-12">        
        <label data-ng-show="password1.length > 0 && password1.length < 3">Wachtwoord moet tenminste drie tekens lang zijn.</label>
        <label data-ng-show="password1.length >= 3 && password1 != password2">Wachtwoorden komen niet overeen.</label>
      </div>
    </div>
  </ng-form>
</div>